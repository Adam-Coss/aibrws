{
  "name": "People Highlighter",
  "description": "Обводит людей в видео и картинках (RT-DETR + U2Net, ONNX/WebGPU)",
  "version": "1.1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "People Highlighter"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "overlay.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "detector.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}